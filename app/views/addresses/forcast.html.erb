<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <p class="my-5">
    <strong class="block font-medium mb-1">Street:</strong>
    <%= address.street %>
    </p>
    <p class="my-5">
    <strong class="block font-medium mb-1">Matched address: </strong>
    <%= loc[:mached_addr] %> 
    </p>

    <%= link_to "Back to addresses", addresses_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
